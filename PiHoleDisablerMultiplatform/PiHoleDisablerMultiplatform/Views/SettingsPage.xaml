<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiHoleDisablerMultiplatform.Views.SettingsPage"
             x:Name="Settings"
             Title="Settings"
             xmlns:UI="clr-namespace:PiHoleDisablerMultiplatform.UI"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Horizontal" Spacing="100">
                <StackLayout Orientation="Vertical" Spacing="30">
                    <UI:DynamicLabel Text="Theme" Padding="0,15,0,0"/>
                    <UI:DynamicLabel Text="Only Show Time"/>
                    <UI:DynamicLabel Text="24 Hour Clock"/>
                    <UI:DynamicLabel Text="Day/Month/Year"/>
                    <UI:DynamicLabel Text="Query Count" />
                </StackLayout>
                <StackLayout Orientation="Vertical">
                    <UI:ThemeButton x:Name="themeButton" Text="Default" Command="{Binding ThemeCommand}" CommandParameter="{x:Reference Settings}" WidthRequest="85"  Padding="-20,0,0,0"/>
                    <UI:CheckBox x:Name="timeOnlyCheckbox" CheckedChanged="timeOnlyCheckbox_CheckedChanged"/>
                    <UI:CheckBox x:Name="hourCheckBox" CheckedChanged="hourCheckBox_CheckedChanged"/>
                    <UI:CheckBox x:Name="dayMonthYear" CheckedChanged="dayMonthYear_CheckedChanged"/>
                    <UI:DynamicLabel Text="30" Padding="10,0,0,0"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>