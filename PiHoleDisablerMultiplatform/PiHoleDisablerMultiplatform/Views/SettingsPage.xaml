<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiHoleDisablerMultiplatform.Views.SettingsPage"
             xmlns:UI="clr-namespace:PiHoleDisablerMultiplatform.UI"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Horizontal" Spacing="100">
                <StackLayout Orientation="Vertical" Spacing="30" Padding="10 0 0 30">
                    <UI:DynamicLabel Text="Only Show Time"/>
                    <UI:DynamicLabel Text="24 Hour Clock"/>
                    <UI:DynamicLabel Text="Theme"/>
                    <UI:DynamicLabel Text="Query Count" />
                </StackLayout>
                <StackLayout Orientation="Vertical" Spacing="20">
                    <CheckBox/>
                    <CheckBox />
                    <UI:DynamicLabel Text="Default Theme" />
                    <UI:DynamicLabel Text="30"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>